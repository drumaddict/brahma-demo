        .widget.blog_gallery
          %h3 Our Gallery
          %ul.sidebar-gallery
            -@main_slider_images.each_with_index do |slide,index|
              %li
                = link_to slide.becomes(MediaCollectionMedium).medium.url ,  rel: 'prettyPhoto', class: 'preview' do
                  =image_tag slide.becomes(MediaCollectionMedium).medium.url(:thumb_100_100), alt: slide.title
        .widget.categories
          %h3 Categories
          .row
            .col-sm-6
              %ul.blog_category
                -@page_types.each do |page_type|
                  %li
                  =link_to page_type_path(page_type) do
                    =page_type.title
                    -#%span.badge=page_type.id

        / /.categories
