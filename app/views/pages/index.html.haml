%section#blog.container
  .center
    %h2 All Destinations
    %p.lead See all the cities.
  .blog
    .row
      .col-md-8
        - @pages.each do |page|
          .blog-item
            .row
              .col-xs-12.col-sm-2.text-center
                .entry-meta
                  %span#publish_date=page.created_at
                  %span
                    %i.fa.fa-user
                    %a{:href => "#"} John Doe
                  %span
                    %i.fa.fa-comment
                    %a{:href => "blog-item.html#comments"} 2 Comments
                  %span
                    %i.fa.fa-heart
                    %a{:href => "#"} 56 Likes
              .col-xs-12.col-sm-10.blog-content
                %h2
                  =link_to page.title, page_path(page)
                -if page.images.any?
                  =image_tag page.images.first.medium.url, alt: page.title, width: '100%', class: 'img-responsive img-blog'
                %h3=raw page.summary
                =link_to  page_path(page), class: 'btn btn-primary readmore' do
                  Read More
                  %i.fa.fa-angle-right
        %ul.pagination.pagination-lg
          %li
            %a{:href => "#"}
              %i.fa.fa-long-arrow-left>
              Previous Page
          %li.active
            %a{:href => "#"} 1
          %li
            %a{:href => "#"} 2
          %li
            %a{:href => "#"} 3
          %li
            %a{:href => "#"} 4
          %li
            %a{:href => "#"} 5
          %li
            %a{:href => "#"}
              Next Page
              %i.fa.fa-long-arrow-right
        / /.pagination
      / /.col-md-8
      %aside.col-md-4
        .widget.search
          %form{:role => "form"}
            %input.form-control.search_box{:autocomplete => "off", :placeholder => "Search Here", :type => "text"}
        / /.search
        .widget.categories
          -#%h3 Recent Comments
          -#.row
            .col-sm-12
