    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %title Brahma Frontend Demo
    / core CSS
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application'
